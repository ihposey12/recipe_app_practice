<h1>All Recipes</h1>

<%= form_with url: '/recipes/search', method: :get do |form| %>
    <%= form.label :query, 'search for' %>
    <%= form.text_field :query %>
    <%= form.submit 'search' %>
<% end %>

<% @recipes.each do |r| %>
    <%= "#{r.name} has #{r.ingredients.length} ingredients." %>
<% end %>